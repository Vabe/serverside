<%- include ('header'); -%>

  <div class="login">
    <main>
      <section>
        <div class="container-fluid">
          <div class="row align-items-center h100">
            <div class="col-12 col-md-6 text-center">
              <object type="image/svg+xml" data="./assets/img/undraw_code_review_l1q9.svg"></object>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="panel">
                <h1 class="pb-4">Welcome!</h1>
                <% if (typedef error !== 'undefined') { %> 
                  <div class="alert alert-danger"><%= error %> </div>
                <% } %> 
                <form method="POST">
                  <div class="input-container mb-4">
                    <label for="text-input-3">E-Mail Address*</label>
                    <input type="text" id="text-input-3" placeholder="john.doe@test.com" />
                    <div></div>
                    <span></span>
                  </div>

                  <div class="input-container">
                    <label for="text-input-4">Password*</label>
                    <input
                      type="password"
                      id="text-input-4"
                      class=""
                      placeholder="Enter your password"
                    />
                    <div></div>
                    <span></span>
                  </div>

                  <div class="row justify-content-between mt-5 px-3">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" class="custom-control-input" id="customCheck1" />
                      <label class="custom-control-label" for="customCheck1"
                        >Check this custom checkbox</label
                      >
                    </div>
                    <a type="submit" class="btn btn-secondary">Submit</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

<%- include ('footer'); -%>

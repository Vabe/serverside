<%- include ('header', {pageTitle: 'Projects'}) -%>

<main class="mt-5">
  <section>
    <div class="container">
      <div class="row align-items-center">
        <h3>Users</h3>
        <a href="#" type="button" class="btn btn-secondary ml-4">
          Add new
          <object type="image/svg+xml" data="/img/plus-solid.svg" width="15"></object>
        </a>
      </div>
      <div class="row">
        <div class="col-8">
          <div class="panel mt-4">
            <h1 class="pb-4">Adding a new User</h1>
            <form method="POST">
            <div class="input-container mb-4">
              <label for="text-input-3">Username</label>
              <input type="text" id="text-input-name" placeholder="Bence" name="name"/>
              <div></div>
              <span></span>
            </div>

            <div class="input-container mb-4">
              <label for="text-input-3">Password</label>
              <input type="password" id="text-input-password" placeholder="*****" name="password"/>
              <div></div>
              <span></span>
            </div>

            <div class="input-container mb-4">
              <label for="text-input-3">Email</label>
              <input type="email" id="text-input-email" placeholder="bence@valent.com" name="email"/>
              <div></div>
              <span></span>
            </div>
            <input type="submit" class="btn btn-secondary" value="Add" />
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include ('footer') -%>

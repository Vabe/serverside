<%- include ('header', {pageTitle: 'Projects'}) -%>

<main class="mt-5">
  <section>
    <div class="container">
      <div class="row align-items-center">
        <h3>Projects</h3>
        <!--<a href="/projects/new" type="button" class="btn btn-secondary ml-4">
          Add new
          <object type="image/svg+xml" data="/img/plus-solid.svg" width="15"></object>
        </a>-->
      </div>
      <div class="row mt-5">
        <% if (projects.length === 0) { %>
          <div class="mx-auto">
            <h3 class="text-center d-block">No Projects yet!</h3>
            <h5 class="text-center text-muted mx-auto d-block">Go to<a class="nav-link d-inline text-muted" href="/users" style="text-decoration: underline;">Users</a> and select one to add some projects!</h5>
          </div>
        <% } else { %>
        <div class="card-deck">
          <% projects.forEach((project, idx) => {%>
            <a href="/projects/<%= project.id %>" class="card" style="text-decoration: none; color: #444">
              <div class="card" style="box-shadow: none;">
                <img src="/img/undraw_insert_block_efyb.svg" class="card-img-top" alt="..."/>
                <div class="card-body">
                    <h5 class="card-title"><%= project.title %></h5>
                  <p class="card-text">
                    <%= project.desc %>
                  </p>
                </div>
                <div class="card-footer">
                  <small class="text-muted"><%= project.updated %></small>
                </div>
              </div>
            </a>
          <% if (idx % 3 === 2) { %>
              <span class="w-100"></span>
              <br><br>
            <% } %>
          <% }); %>
        </div>
        <% }; %>
      </div>
    </div>
  </section>
</main>

<%- include ('footer') -%>

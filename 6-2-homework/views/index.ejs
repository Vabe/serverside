<%- include('header-index'); -%>

  <div class="login">
    <main>
      <section>
        <div class="container-fluid">
          <div class="row align-items-center h100">
            <div class="col-12 col-md-6 text-center">
              <img src="/img/undraw_code_review_l1q9.svg">
            </div>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="panel">
                <h1 class="pb-4">Welcome!</h1>
                
                <form method="POST">
                  <div class="input-container mb-4">
                    <label for="text-input-3">E-Mail Address*</label>
                    <input type="text" id="text-input-3" placeholder="john.doe@test.com" />
                    <div></div>
                    <span></span>
                  </div>

                  <div class="input-container">
                    <label for="text-input-4">Password*</label>
                    <input
                      type="password"
                      id="password"
                      name="password"
                      placeholder="Enter your password"
                    />
                    <div></div>
                    <span></span>
                  </div>

                  <div class="row justify-content-between mt-5 px-3">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" class="custom-control-input" id="customCheck1" />
                      <label class="custom-control-label" for="customCheck1"
                        >Check this custom checkbox</label
                      >
                    </div>
                    <input type="submit" name="submit" id="btn-submit" value="Submit" class="btn btn-secondary d-flex">
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

<%- include('footer'); -%>
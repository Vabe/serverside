<%- include ('header', {pageTitle: 'Projects'}) -%>

<main class="mt-5">
  <section>
    <div class="container">
      <div class="row align-items-center">
        <h3><%= project.title %></h3>
      </div>
      <div class="row">
        <div class="col-8">
          <div class="panel mt-4">
            <h1 class="pb-4">Edit project properties</h1>
              <form method="POST">
                <div class="input-container mb-4">
                  <label for="text-input-3">Project Name</label>
                  <input type="text" id="text-input-name" value="<%= project.title %>" name="title"/>
                  <div></div>
                  <span></span>
                </div>

                <div class="input-container mb-4">
                  <label for="text-input-3">Description</label>
                  <input type="text" id="text-input-desc" value="<%= project.desc %> " name="desc"/>
                  <div></div>
                  <span></span>
                </div>

                <div class="input-container mb-4">
                  <label for="text-input-3">Associated user name</label>
                  <input type="text" id="text-input-user" value="<%= project._assignedTo %> " name="user" disabled/>
                  <div></div>
                  <span></span>
                </div>

                <div class="input-container mb-4">
                  <label for="text-input-3">Date</label>
                  <input type="text" id="text-input-date" value="<%= project.createdAt %> " name="createdAt" />
                  <div></div>
                  <span></span>
                </div>
                <div class="row justify-content-center">
                  <input type="submit" class="btn btn-secondary" value="Update" name="edit"/>
                  <a href="/projects/<%= project.id %>/delete" type="button" class="btn btn-danger ml-4" name="delete">Delete</a>
                </div>
              </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include ('footer') -%>

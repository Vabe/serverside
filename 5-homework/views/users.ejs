<%- include ('header', {pageTitle: 'Projects'}) -%>

<main class="mt-5">
  <section>
    <div class="container">
      <div class="row align-items-center">
        <h3>Users</h3>
        <a href="/users/new" type="button" class="btn btn-secondary ml-4">
          Add new
          <object type="image/svg+xml" data="./assets/img/plus-solid.svg" width="15"></object>
        </a>
      </div>
      <div class="row mt-5 user-row">
        <div class="card-deck">
          <%users.forEach((user, idx) => {%>
            <div class="card">
              <img src="./assets/img/undraw_female_avatar_w3jk.svg" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title"><% user.name %> </h5>
              </div>
            </div>
            <% if (idx % 3 === 0) { %>
              <span class="w-100"></span>
              <br><br>
            <% } %>
          <% }); %>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include ('footer') -%>

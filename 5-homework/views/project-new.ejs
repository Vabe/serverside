<%- include ('header', {pageTitle: 'New Project'}) -%>

<main class="mt-5">
  <section>
    <div class="container">
      <div class="row align-items-center">
        <h3>Projects</h3>
        <a href="/project/new" type="button" class="btn btn-secondary ml-4">
          Add new
          <object type="image/svg+xml" data="./assets/img/plus-solid.svg" width="15"></object>
        </a>
      </div>
      <div class="row">
        <div class="col-8">
          <div class="panel mt-4">
            <h1 class="pb-4">Adding a new Project</h1>

            <div class="input-container mb-4">
              <label for="text-input-3">Project Name</label>
              <input type="text" id="text-input-name" placeholder="Goldsweeper" />
              <div></div>
              <span></span>
            </div>

            <div class="input-container mb-4">
              <label for="text-input-3">Associated user name</label>
              <input type="text" id="text-input-user" placeholder="User No. 3" />
              <div></div>
              <span></span>
            </div>

            <div class="input-container mb-4">
              <label for="text-input-3">Date</label>
              <input type="text" id="text-input-date" placeholder="2020.03.05" />
              <div></div>
              <span></span>
            </div>

            <a type="button" class="btn btn-secondary" href="projects.html">Add</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include ('footer') -%>
